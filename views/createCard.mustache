<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Create Snippet</title>
  <link rel="stylesheet" href="/static/styles.css">

</head>

<body>
  <h1>Create a Card</h1>

  <header>

    <form class="float" action="/quiz" method="get">
      <input type="submit" name="" value="Start Quiz">
    </form>

    <form class="float" action="/createCard" method="get">
      <input type="submit" name="" value="Create a Card">
    </form>

    {{#username}}
      <form class="float" action="/signup" method="get">
        <input type="submit" name="" value="Logged in as {{username}}">
      </form>
    {{/username}}

    {{#signedIn}}
      <form class="float" action="/login" method="get">
        <input type="submit" name="" value="Log out">
      </form>
    {{/signedIn}}

    {{^signedIn}}
    <form class="float" action="/login" method="get">
      <input type="submit" name="" value="Log in">
    </form>
    {{/signedIn}}

  </header>
  <div class="clearFloat"></div>

  <form class="" action="/createCard" method="post">
    <!-- <label for="gab">Code Snippet</label>
      <input type="text" name="title" value="" placeholder="Type code here"> -->
    <div>
      <label for="deck">Deck name</label>
      <input type="text" name="deck" value="" placeholder="Which deck should this go in?">
    </div>
    <div>
      <label for="code">Question</label>
      <input type="text" name="code" value="" placeholder="Type your question here">
    </div>
    <div>
      <label for="language">Answer</label>
      <input type="text" name="language" value="" placeholder="Type the answer here">
    </div>

    <div>
      <input type="submit" name="" value="Submit">
    </div>
  </form>
</body>

</html>
