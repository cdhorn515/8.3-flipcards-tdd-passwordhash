<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Quiz</title>
  </head>
  <body>

    <form class="float" action="/home" method="get">
      <input type="submit" name="" value="Home">
    </form>

    {{#username}}
      <form class="float" action="/signup" method="get">
        <input type="submit" name="" value="Logged in as {{username}}">
      </form>
    {{/username}}

    {{#signedIn}}
      <form class="float" action="/login" method="get">
        <input type="submit" name="" value="Log out">
      </form>
    {{/signedIn}}

    {{^signedIn}}
    <form class="float" action="/login" method="get">
      <input type="submit" name="" value="Log in">
    </form>
    {{/signedIn}}

  </header>
  <div class="clearFloat"></div>


  <h3>Select a deck of cards from the options below:</h3>
    {{#model}}
<form class="" action="/quiz/{{id}}" method="get">
  <button type="submit" name="" value="{{deckName}}" id={{_id}}>{{deckName}}</button>
</form>
  {{/model}}

{{#startQuiz}}

<form class="" action="/answer" method="post">
  <h4>{{question}}</h4>
  <label for="answer">Answer: </label>
  <input type="text" name="answer" value="" placeholder="type answer here">
  <button type="submit" name="button">Submit</button>
</form>

{{/startQuiz}}

{{#correct}}
<h4>That's correct! You've answered {{numCorrect}} questions correctly.</h4>
{{/correct}}


